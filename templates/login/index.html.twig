{% extends 'base.html.twig' %}

{# ... #}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}

	<h1>Se Connecter</h1>
	<form action="{{ path('login') }}" method="post">
		<div class="form-group">
			<label for="username" class="form-label mt-4">Email:</label>
			<input type="email" id="username" name="_username" class="form-control" placeholder="Entrer email" aria-describedby="emailHelp" value="{{ last_username }}"/>
			<small id="emailHelp" class="form-text text-muted">Mail de test: symfony@test.com</small>
		</div>
		<div class="form-group">
			<label for="password" class="form-label mt-4">Mot de passe</label>
			<input type="password" id="password" name="_password" class="form-control" placeholder="Entrer votre mot de passe" aria-describedby="mdpHelp"/>
			<small id="mdpHelp" class="form-text text-muted">Mdp: symfony</small>
		</div>
		<div>
			<a href="{{ path('register') }}">Pas encore de compte ? Inscrivez-vous !</a>

		</div>
		<div class="form-group">
			<button type="submit" class="btn btn-primary">Se Connecter</button>
		</div>

		<input type="hidden" name="homepage" value="/"/>
	</form>


{% endblock %}
